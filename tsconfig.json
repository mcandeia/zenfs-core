{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2020",
		"outDir": "dist",
		"lib": ["ESNext", "ESNext.Disposable"],
		"moduleResolution": "NodeNext",
		"declaration": true,
		"strict": true,
		"emitDeclarationOnly": true,
		"allowImportingTsExtensions": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"],
	"typedocOptions": {
		"entryPoints": ["./src/index.ts"],
		"out": "docs",
		"name": "ZenFS",
		"plugin": ["typedoc-plugin-remove-references"]
	}
}
